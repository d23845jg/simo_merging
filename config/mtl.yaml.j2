wandb:
  project: "simomm"
  mode: "online" # online, offline

dataset_paths:
  nyuv2: "/mnt/lts4/scratch/data/nyuv2"
  cityscapes: "/mnt/lts4/scratch/data/cityscapes"
  taskonomy: "/mnt/lts4/scratch/data/taskonomy"

training_params:
  # Model parameters
  task: "all" # all, seg, part_seg, depth, disp, normal, segment_semantic, normal, keypoints2d, edge_texture, depth_zbuffer
  dataset: "nyuv2" # nyuv2, cityscapes, taskonomy
  network: "dinov2" # dinov2
  weight: "equal" # equal, uncert
  grad_method: "none" # none, graddrop, pcgrad, cagrad

  # Training parameters
  total_epochs: 300
  batch_size: 32
  gpu: 1 # gpu ID
  out_dir: "checkpoints/cityscapes/dinov2/dpt-add_small/mtl/hyperparam_tuning/lr"
  seed: 612

model_merging:
  method: "sum"
  ft_model_files:
    - "checkpoints/nyuv2/dinov2/linear_head/task_specific/h_hb/final/seg_model.pt"
    - "checkpoints/nyuv2/dinov2/linear_head/task_specific/h_hb/final/depth_model.pt"
    - "checkpoints/nyuv2/dinov2/linear_head/task_specific/h_hb/final/normal_model.pt"
  dataset: "nyuv2" # nyuv2, cityscapes, taskonomy
  network: "dinov2" # dinov2
  out_dir: "tall_mask/dinov2/h_hb"

  num_scaling_coef_samples: 11
  specify_lambda: None


